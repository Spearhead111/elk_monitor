{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    // 抑制隐式任何索引错误
    // "suppressImplicitAnyIndexErrors": true,
    "noEmit": true,
    //解析非相对模块的基础地址，默认是当前目录
 	  "baseUrl": "./",
    //路径映射，相对于baseUrl
    "paths": {
        "@/*": ["./src/*"]
    },
    "allowJs": true,
    "noImplicitAny": false, // 不进行any语法检查
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.js", "src/views/games/drum/script.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
